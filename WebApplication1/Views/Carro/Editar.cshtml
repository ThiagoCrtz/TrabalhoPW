@model WebApplication1.Models.Carro

@{
    ViewBag.Title = "Editar Carro";
}

<div class="container mt-4">
    <div class="card shadow-lg w-75 mx-auto">
        <div class="card-header bg-primary text-white text-center">
            <h2>Editar Carro</h2>
        </div>

        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group row justify-content-center mb-3">
                    @Html.LabelFor(model => model.Placa, htmlAttributes: new { @class = "col-md-3 col-form-label fw-bold text-md-end" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Placa, new { htmlAttributes = new { @class = "form-control text-center" } })
                        @Html.ValidationMessageFor(model => model.Placa, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group row justify-content-center mb-3">
                    @Html.LabelFor(model => model.Cor, htmlAttributes: new { @class = "col-md-3 col-form-label fw-bold text-md-end" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Cor, new { htmlAttributes = new { @class = "form-control text-center" } })
                        @Html.ValidationMessageFor(model => model.Cor, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row justify-content-center mb-3">
                    <div class="col-md-3 col-form-label text-md-end fw-bold">
                        <P>Ano do carro</P>
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Data, "{0:yyyy-MM-dd}", new { @class = "form-control text-center", type = "date" })
                        @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="text-center mt-4">

                    <div class="card-footer text-center">
                        <input type="submit" value="Salvar" class="btn btn-success btn-lg px-4" />
                        @Html.ActionLink("Voltar para a Lista", "Lista", null, new { @class = "btn btn-secondary btn-lg px-4 ms-3" })
                    </div>
                </div>
            }
        </div>
</div>
