@model WebApplication1.Models.Evento

@{
    ViewBag.Title = "Criar Celular";
}

<div class="container mt-4">
    <div class="card shadow-lg w-50 mx-auto">
        <div class="card-header bg-primary text-white text-center">
            <h2>Criar Novo Evento</h2>
        </div>

        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <h4>Preencha os dados do Evento</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group row">
                    @Html.LabelFor(model => model.Local, htmlAttributes: new { @class = "col-md-3 col-form-label text-md-end" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Local, new { htmlAttributes = new { @class = "form-control text-center" } })
                        @Html.ValidationMessageFor(model => model.Local, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mt-2">
                    @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "col-md-3 col-form-label text-md-end" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control text-center", type = "date" } })
                        @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group row mt-3">
                    <div class="col-md-12 d-flex justify-content-center">
                        <input type="submit" value="Criar" class="btn btn-success btn-lg me-2" />
                        @Html.ActionLink("Voltar", "List", null, new { @class = "btn btn-secondary btn-lg" })
                    </div>
                </div>
            }
        </div>
    </div>


</div>
