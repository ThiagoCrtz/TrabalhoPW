@model WebApplication1.Models.Evento

@{
    ViewBag.Title = "Excluir Evento";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header text-center bg-danger text-white">
            <h2>Excluir Evento</h2>
        </div>
        <div class="card-body d-flex flex-column align-items-center">
            <h3 class="text-center text-danger">Tem certeza que deseja excluir este evento?</h3>
            <hr class="w-100" />
            <dl class="row w-75">
                <dt class="col-md-5 text-md-end fw-bold">
                    @Html.DisplayNameFor(model => model.Local)
                </dt>
                <dd class="col-md-7 text-md-start">
                    @Html.DisplayFor(model => model.Local)
                </dd>

                <dt class="col-md-5 text-md-end fw-bold">
                    @Html.DisplayNameFor(model => model.cep)
                </dt>
                <dd class="col-md-7 text-start">
                    @Html.DisplayFor(model => model.cep)
                </dd>

                <dt class="col-md-5 text-md-end fw-bold">
                    @Html.DisplayNameFor(model => model.endereço)
                </dt>
                <dd class="col-md-7 text-start">
                    @Html.DisplayFor(model => model.endereço)
                </dd>

                <dt class="col-md-5 text-md-end fw-bold">
                    @Html.DisplayNameFor(model => model.cidade)
                </dt>
                <dd class="col-md-7 text-start">
                    @Html.DisplayFor(model => model.cidade)
                </dd>

                <dt class="col-md-5 text-md-end fw-bold">
                    @Html.DisplayNameFor(model => model.Data)
                </dt>
                <dd class="col-md-7 text-start">
                    @Model.GetFormattedData()
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="mt-3 d-flex gap-3">
                    <input type="submit" value="Excluir" class="btn btn-danger btn-lg px-4" />
                    @Html.ActionLink("Voltar para a Lista", "List", null, new { @class = "btn btn-secondary btn-lg px-4" })
                </div>
            }
        </div>
    </div>
</div>
